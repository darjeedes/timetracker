<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<GridPane fx:controller="com.darjeedes.timetracker.business.Controller"
		  xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
	<VBox>

		<ComboBox fx:id="contextComboBox" onShowing="#updateComboBox"/>

		<Button text="Dazu" onMouseClicked="#onAddButtonClick"/>
		<Button text="Lade" onMouseClicked="#onLoadButtonClick"/>
		<Button text="Speichere" onMouseClicked="#onSaveButtonClick"/>
	</VBox>
</GridPane>
