<?import javafx.scene.layout.VBox?>
<GridPane hgap="10.0" minHeight="600.0" minWidth="800.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.darjeedes.timetracker.views.main.MainController">
	<VBox>
		<children>
         <HBox>
            <children>
               <Label text="Kontext / Projekt:" />
               <Button fx:id="BT_AddContext" mnemonicParsing="false" onAction="#addContext" text="+" />
            </children>
         </HBox>

			<ComboBox fx:id="CB_Contexts" onAction="#loadContext" onShowing="#updateContextComboBox" />
         <HBox layoutX="10.0" layoutY="10.0">
            <children>
               <Label text="VorgÃ¤nge:" />
               <Button fx:id="BT_AddIssue" mnemonicParsing="false" onAction="#addIssue" text="+" />
               <Button mnemonicParsing="false" text="Start" />
            </children>
         </HBox>
         <ListView fx:id="LI_Issues" onMouseClicked="#updateCurrentIssue" prefHeight="470.0" prefWidth="300.0" />
		</children>
	</VBox>
   <VBox GridPane.columnIndex="1">
      <children>
         <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
           <tabs>
             <Tab text="Notizen">
               <content>
                 <AnchorPane prefHeight="180.0" prefWidth="200.0">
                        <children>
                           <TextArea AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
                        </children>
                     </AnchorPane>
               </content>
             </Tab>
             <Tab text="Zeit">
               <content>
                 <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <children>
                           <TableView prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                             <columns>
                               <TableColumn prefWidth="75.0" text="KW" />
                               <TableColumn prefWidth="75.0" text="Datum" />
                                 <TableColumn prefWidth="75.0" text="Start" />
                                 <TableColumn prefWidth="75.0" text="Stop" />
                                 <TableColumn prefWidth="75.0" text="Dauer" />
                                 <TableColumn prefWidth="75.0" text="Beschreibung" />
                             </columns>
                           </TableView>
                        </children>
                     </AnchorPane>
               </content>
             </Tab>
           </tabs>
         </TabPane>
      </children>
   </VBox>
	<columnConstraints>
		<ColumnConstraints percentWidth="35.0" />
		<ColumnConstraints percentWidth="65.0" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints percentHeight="100.0" />
		<RowConstraints />
	</rowConstraints>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</GridPane>
