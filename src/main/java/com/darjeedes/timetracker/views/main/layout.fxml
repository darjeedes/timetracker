<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane hgap="10.0" minHeight="600.0" minWidth="800.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.darjeedes.timetracker.views.main.MainController">
   <VBox prefHeight="200.0" prefWidth="100.0">
      <children>
         <HBox>
            <children>
               <Label text="Kontext / Projekt:" />
               <Button fx:id="BT_AddContext" mnemonicParsing="false" onAction="#addContext" text="+" />
               <Button mnemonicParsing="false" text="edit" textFill="RED" />
               <Button mnemonicParsing="false" onAction="#deleteCurrentContext" text="-" />
            </children>
         </HBox>
         <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
      
      			<ComboBox fx:id="CB_Contexts" onAction="#loadContext" onShowing="#refreshContextComboBox" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0" />
            </children>
         </AnchorPane>
      </children>
   </VBox>
   <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
      <children>
         <AnchorPane>
            <children>
               <Label fx:id="LB_IssueName" text="Label" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="0.0">
                  <font>
                     <Font name="System Bold" size="12.0" />
                  </font>
               </Label>
            </children>
         </AnchorPane>
      </children>
   </VBox>
	<VBox GridPane.rowIndex="1">
		<children>
         <AnchorPane>
            <children>
               <Label text="VorgÃ¤nge:" />
               <Button fx:id="BT_AddIssue" mnemonicParsing="false" onAction="#addIssue" text="+" AnchorPane.rightAnchor="0.0" />
            </children>
         </AnchorPane>
         <HBox layoutX="10.0" layoutY="10.0" />
         <TableView fx:id="TV_Issues" onMouseClicked="#loadIssue" prefWidth="270.0" VBox.vgrow="ALWAYS">
            <contextMenu>
               <ContextMenu>
                 <items>
                     <MenuItem mnemonicParsing="false" text="Start tracking" />
                   <MenuItem mnemonicParsing="false" text="Edit" />
                     <MenuItem mnemonicParsing="false" onAction="#deleteCurrentIssue" text="Delete" />
                 </items>
               </ContextMenu>
            </contextMenu></TableView>
		</children>
	</VBox>
   <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
      <children>
         <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
           <tabs>
             <Tab text="Notizen">
               <content>
                 <AnchorPane prefHeight="180.0" prefWidth="200.0">
                        <children>
                           <TextArea fx:id="TA_IssueNotes" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                              <font>
                                 <Font name="Consolas" size="12.0" />
                              </font></TextArea>
                        </children>
                     </AnchorPane>
               </content>
             </Tab>
             <Tab text="Zeit">
               <content>
                 <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <children>
                           <TableView prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                             <columns>
                               <TableColumn prefWidth="75.0" text="KW" />
                               <TableColumn prefWidth="75.0" text="Datum" />
                                 <TableColumn prefWidth="75.0" text="Start" />
                                 <TableColumn prefWidth="75.0" text="Stop" />
                                 <TableColumn prefWidth="75.0" text="Dauer" />
                                 <TableColumn prefWidth="75.0" text="Beschreibung" />
                             </columns>
                           </TableView>
                        </children>
                     </AnchorPane>
               </content>
             </Tab>
           </tabs>
         </TabPane>
      </children>
   </VBox>
	<columnConstraints>
		<ColumnConstraints percentWidth="35.0" />
		<ColumnConstraints percentWidth="65.0" />
	</columnConstraints>
	<rowConstraints>
      <RowConstraints fillHeight="false" maxHeight="60.0" minHeight="10.0" prefHeight="60.0" />
		<RowConstraints vgrow="ALWAYS" />
		<RowConstraints />
	</rowConstraints>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</GridPane>
